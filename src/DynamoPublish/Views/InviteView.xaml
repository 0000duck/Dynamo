<Window x:Class="Dynamo.Publish.Views.InviteView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:resx="clr-namespace:Dynamo.Publish"
        Title="Request Access" Height="192.226" Width="372" WindowStartupLocation="CenterOwner"
        >

    <Grid Background="#333">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Name="Panel" Margin="15,15,14.6,15" Grid.ColumnSpan="2">
            
            <TextBlock Name ="Indicator" Foreground="WhiteSmoke" Padding="0,15,0,15" FontSize="15"
                       Text ="Request Access"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,25,0.2,0" RenderTransformOrigin="0.031,1.281">
                <Button Content="OK"   Margin="5" HorizontalAlignment="Right" x:Name="okButton" 
                        VerticalAlignment="Top" Width="75" 
                         Command="{Binding InviteCommand}"
                        IsDefault="True" TabIndex="2" />
                <Button Content="Cancel"  Margin="5" HorizontalAlignment="Right"
                        x:Name="cancelButton" VerticalAlignment="Top" Width="75" 
                        IsCancel="True" TabIndex="3" />

            </StackPanel>

        </StackPanel>
    </Grid>
</Window>