<UserControl x:Class="Dynamo.Nodes.PackageManager.OxygenLogin"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignWidth="335" d:DesignHeight="48">
             
    <Grid Background="Black" MaxHeight="48">

        <StackPanel Name="LoginContainerStackPanel" Orientation="Horizontal" Height="48">

          <TextBlock Margin="10" Foreground="DarkGray" FontSize="18">Login to the Package Manager</TextBlock>
          <Button Name="LoginButton" Margin="0" Width="70" ToolTip="Click To login" Style="{DynamicResource ResourceKey=SSearchButton}" Tag="..\Images\padlock-closed-black24x24.png" />
          
        </StackPanel>
      
    </Grid>

    <UserControl.Resources>
      <ResourceDictionary>
        <ResourceDictionary.MergedDictionaries>
          <ResourceDictionary Source="..\Themes\DynamoModern.xaml" />
        </ResourceDictionary.MergedDictionaries>
      </ResourceDictionary>
    </UserControl.Resources>
      
</UserControl>
