                            </ListBox.ItemsPanel>
                        </ListBox>
                    </Grid>
                </DataTemplate>
                
            </ListBox.ItemTemplate>
            
            
        </ListBox>-->

        <!-- This is the inner list (showing all the classes) -->

        <!--<ListView Name="ClassListView"
                  ScrollViewer.CanContentScroll="False"
                  ItemTemplateSelector="{StaticResource ClassObjectTemplateSelector}">
            <ListView.ItemsPanel>
                <ItemsPanelTemplate>
                    <controls:LibraryWrapPanel />
                </ItemsPanelTemplate>
            </ListView.ItemsPanel>
        </ListView>-->

    </Grid>
</UserControl>