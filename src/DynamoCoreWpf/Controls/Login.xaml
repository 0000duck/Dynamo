<UserControl x:Class="Dynamo.Wpf.Controls.Login"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:viewModels="clr-namespace:Dynamo.ViewModels"
             mc:Ignorable="d" 
             
             d:DesignHeight="300" d:DesignWidth="300" >
    <Grid Background="AliceBlue" d:DataContext="{d:DesignInstance viewModels:PackageManagerClientViewModel }">
        <Button>

            <Button.Style>
                <Style TargetType="{x:Type Button}">
                    <Setter Property="Content" Value="Login" />
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding IsLoggedIn}" Value="true">
                            <Setter Property="Content" Value="{Binding Model.Username}" />
                        </DataTrigger>
                    </Style.Triggers>
                </Style> 
            </Button.Style>

        </Button>
    </Grid>
</UserControl>
