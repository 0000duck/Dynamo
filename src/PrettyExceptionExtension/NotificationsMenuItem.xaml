<UserControl x:Class="WarningHelper.NotificationsMenuItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WarningHelper"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <MenuItem Name="NotificationsMenuItemControl">
        <MenuItem.Header>
            <Grid MinWidth="25" Width="Auto">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="70*"></ColumnDefinition>
                    <ColumnDefinition Width="30*"></ColumnDefinition>

                </Grid.ColumnDefinitions>
                <Image Name="Icon" Height="15" HorizontalAlignment="Left" Grid.Column="0" Grid.Row="0"></Image>
                <Grid Name="BadgeGrid" Grid.Column="1"  VerticalAlignment="Stretch" MaxHeight="50" MinWidth="10" >
                    <Border CornerRadius="80" BorderThickness="1" BorderBrush="LightGreen" Background="LightGreen" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" MinWidth="10" MinHeight="10">
                        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" Name="CountLabel" Text="Count">
                        </TextBlock>
                    </Border>
                </Grid>
            </Grid>
        </MenuItem.Header>

    </MenuItem>
   
</UserControl>
