<UserControl x:Class="Dynamo.Elements.dynElement"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:dropShadow="clr-namespace:Microsoft.Windows.Themes;assembly=PresentationFramework.Aero"
    xmlns:de="clr-namespace:Dynamo.Elements"
    Height="300" Width="160" Name="topControl" Loaded="topControl_Loaded" KeyUp="OnKeyUp" PreviewKeyUp="OnPreviewKeyUp">
    <UserControl.Resources>
        <de:Shrinker x:Key="shrinker"/>
        <de:Halfer x:Key="halfer"/>
        <de:Quarter x:Key="quarter"/>
    </UserControl.Resources>
    <Grid Name="grid">
        <Grid.ContextMenu>
            <ContextMenu Name="MainContextMenu" ContextMenuOpening="MainContextMenu_ContextMenuOpening">
                <MenuItem Name="longestList_cm" IsCheckable="True" Header="Longest List" Click="longestList_cm_Click" IsChecked="False"/>
                <MenuItem Name="shortestList_cm" IsCheckable="True" Header="Shortest List" Click="shortestList_cm_Click" IsChecked="True"/>
                <MenuItem Name="fullLace_cm" IsCheckable="True" Header="Full Lace" Click="fullLace_cm_Click" IsChecked="False"/>
                <Separator Name="separator1_cm"/>
            </ContextMenu>
        </Grid.ContextMenu>
        <Grid Name="gridLeft" 
              HorizontalAlignment="Left" 
              VerticalAlignment="Stretch"
              Margin="-5,5,0,5" 
              Width="Auto" 
              IsHitTestVisible="True" 
              Background="Transparent"
              Canvas.ZIndex="99">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="14"/>
                <ColumnDefinition Width="Auto"/>           
            </Grid.ColumnDefinitions>
        </Grid>
        <Grid Name="gridRight" 
              HorizontalAlignment="Right" 
              VerticalAlignment="Stretch"
              Margin="0,5,-5,5" 
              Width="Auto" 
              IsHitTestVisible="True" 
              Background="Transparent"
              Canvas.ZIndex="99">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="14"/>
            </Grid.ColumnDefinitions>
        </Grid>
        <Canvas Canvas.Left="0" 
                Canvas.Top="0" 
                Name="elementCanvas" 
                Margin="0,0,0,0">
            <Rectangle HorizontalAlignment="Right" 
                       Canvas.Left="0"
                       Canvas.Top="0"
                       Width="{Binding ElementName=topControl, Path=Width}"
                       Height="{Binding ElementName=topControl, Path=Height}"
                       Name="elementRectangle" 
                       RadiusX="10" 
                       RadiusY="10"
                       Stroke="Black"
                       StrokeThickness="2"
                       Canvas.ZIndex="90">
                <Rectangle.Fill>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1" >
                        <GradientStop Color="Yellow" Offset="0.0" />
                        <GradientStop Color="Orange" Offset="1" />
                    </LinearGradientBrush>
                </Rectangle.Fill>
            </Rectangle>
            <Rectangle 
                        HorizontalAlignment="Right"
                        Canvas.Left="2"
                       Canvas.Top="2"
                       Width="{Binding HasFunction, Converter={StaticResource shrinker}, ElementName=topControl, Path=Width}"
                       Height="{Binding HasFunction, Converter={StaticResource shrinker}, ElementName=topControl, Path=Height}"
                       RadiusX="9" 
                       RadiusY="9"
                       Stroke="LightGray"
                       StrokeThickness="1"
                       Canvas.ZIndex="90"/>
            <Rectangle HorizontalAlignment="Right" 
                       Canvas.Left="2"
                       Canvas.Top="2"
                       Width="{Binding HasFunction, Converter={StaticResource shrinker}, ElementName=topControl, Path=Width}"
                       Height="{Binding HasFunction, Converter={StaticResource halfer}, ElementName=topControl, Path=Height}" 
                       Name="elementShine" 
                       RadiusX="{Binding HasFunction, Converter={StaticResource halfer}, ElementName=elementRectangle, Path=RadiusX}" 
                       RadiusY="{Binding HasFunction, Converter={StaticResource halfer}, ElementName=elementRectangle, Path=RadiusY}"
                       Canvas.ZIndex="91">
                <Rectangle.Fill>
                    <SolidColorBrush Opacity=".25" Color="white" />
                </Rectangle.Fill>
            </Rectangle>
            <!--<TextBlock Height="18" 
                       Name="nickNameBlock" 
                       VerticalAlignment="Center" 
                       Text="nickName" 
                       Margin="0,-18,0,0" 
                       FontFamily="Calibri"
                       FontSize="14" 
                       FontWeight="Normal" 
                       TextAlignment="Center" 
                       IsHitTestVisible="False" 
                       Canvas.ZIndex="99"
                       Canvas.Left="0" 
                       Width="160" />-->
            <TextBox Height="24" 
                       Name="nickNameBlock" 
                       VerticalAlignment="Center" 
                       HorizontalAlignment="Left"
                       Text="{Binding NickName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                       Margin="0,-24,0,0" 
                       FontFamily="Calibri"
                       FontSize="14" 
                       FontWeight="Normal" 
                       TextAlignment="Center" 
                       IsHitTestVisible="True" 
                       Canvas.ZIndex="99" 
                       Width="{Binding ElementName=grid, Path=ActualWidth}"
                       MaxWidth="{Binding ElementName=grid, Path=ActualWidth}"
                       BorderThickness="0">
                <TextBox.Background>
                    <SolidColorBrush />
                </TextBox.Background>
            </TextBox>
        </Canvas>
        <Grid Name="inputGrid"
              VerticalAlignment="Stretch"
              HorizontalAlignment="Stretch"
              Height="Auto"
              Width="Auto"
              Margin="45,5,45,5"/>
    </Grid>
</UserControl>
